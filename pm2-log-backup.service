[Unit]
Description=PM2 Log Backup Service
Documentation=https://github.com/delanursumawati/pm2log
After=network.target

[Service]
Type=oneshot
ExecStart=/bin/bash /usr/local/bin/pm2-log-backup.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=pm2-log-backup

[Install]
WantedBy=multi-user.target
